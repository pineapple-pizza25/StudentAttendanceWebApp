@page
@model IndexModel
@{
    ViewData["Title"] = "Lecturer App Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            text-align: center;
        }

        nav {
            background-color: #4CAF50;
            padding: 15px;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: flex-end;
        }

        .nav-item {
            position: relative;
            margin-right: 20px;
        }

        .nav-link {
            text-decoration: none;
            color: white;
            font-size: 18px;
            padding: 10px;
        }

        .nav-item:hover .dropdown-content {
            display: block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        .welcome-message {
            color: #4CAF50;
            font-size: 48px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <nav>
        <ul>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link">Log In</a>
                <div class="dropdown-content">
                    <a asp-page="/LoginLecturer">Log In as Lecturer</a>
                    <a asp-page="/LoginAdmin">Log In as Admin</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link">Register</a>
                <div class="dropdown-content">
                    <a asp-page="/RegisterLecturer">Register as Lecturer</a>
                    <a asp-page="/RegisterAdmin">Register as Admin</a>
                </div>
            </li>
        </ul>
    </nav>

    <div class="welcome-message">
        Welcome User !
    </div>
</body>
</html>
