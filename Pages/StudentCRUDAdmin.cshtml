@page

<!DOCTYPE html>
<html>
<head>
    <title>Student Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .container {
            display: flex;
            width: 100%;
        }

        .sidebar {
            width: 220px;
            background-color: #f1f1f1;
            padding: 20px;
            box-sizing: border-box;
            position: fixed;
            height: 100%;
            left: 0;
            display: flex;
            flex-direction: column;
        }

            .sidebar h2 {
                margin-top: 0;
            }

        .sidebar-item {
            padding: 10px;
            margin-bottom: 10px;
        }

            .sidebar-item a {
                text-decoration: none;
                color: black;
            }

            .sidebar-item:hover {
                background-color: #ddd;
            }

            .sidebar-item.back-to-home {
                margin-top: auto; 
                margin-top: 20px; 
            }

        .button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 10px 0;
            cursor: pointer;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .button:hover {
                background-color: #45a049;
                transform: scale(1.05);
            }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            width: calc(100% - 220px);
            box-sizing: border-box;
        }

        .header {
            background-color: #4CAF50;
            color: white;
            padding: 20px;
            text-align: center;
            width: calc(100% - 220px);
            box-sizing: border-box;
            position: fixed;
            top: 0;
            left: 220px;
            z-index: 1; 
        }

            .header h1 {
                margin: 0;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 80px;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .action-icons i {
            cursor: pointer;
            font-size: 18px;
            color: #4CAF50;
            transition: color 0.3s ease;
        }

            .action-icons i:hover {
                color: #45a049;
            }

        .create-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .create-button .button {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>INNOV8</h2>
        <div class="sidebar-item"><a href="/About">About</a></div>
        <div class="sidebar-item"><a href="/Students">Student</a></div>
        <div class="sidebar-item"><a href="/Lecturers">Lecturer</a></div>
        <div class="sidebar-item"><a href="/Settings">Settings</a></div>
        <div class="sidebar-item back-to-home">
            <button onclick="location.href='/'" class="button">Back to Home</button>
        </div>
    </div>

    <div class="main-content">
        <div class="header">
            <h1>Student Management</h1>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Date Of Birth</th>
                    <th>Email</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <!-- Change if we need to -->
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>01/01/2000</td>
                    <td>john.doe@example.com</td>
                    <td class="action-icons"><i class="fa fa-pencil" aria-hidden="true"></i></td>
                    <td class="action-icons"><i class="fa fa-trash" aria-hidden="true"></i></td>
                </tr>
                <!-- Repeat rows for more data -->
            </tbody>
        </table>

        <div class="create-button">
            <button class="button">Create New Student</button>
        </div>
    </div>

    <!-- Icons for Edit and Delete -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
