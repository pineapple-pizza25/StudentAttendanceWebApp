@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <div class="hero-section">
        <h1>Welcome to <span class="brand-name">Student Attendance Web App</span></h1>
        <p>Streamline your class attendance and student management with ease.</p>
        <a class="btn btn-primary" href="/StudentInformationPage">View My Classes</a>
    </div>

    <div class="features-section">
        <h2>Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <h3>Track Attendance</h3>
                <p>Quickly manage and track attendance for all your classes.</p>
            </div>
            <div class="feature-card">
                <h3>Student Profiles</h3>
                <p>Access detailed information about your students.</p>
            </div>
            <div class="feature-card">
                <h3>Easy Integration</h3>
                <p>Connect seamlessly with other tools and systems.</p>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        color: #333;
        line-height: 1.6;
    }

    .home-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 2rem;
    }

    .hero-section {
        background: linear-gradient(120deg, #4CAF50, #2E7D32);
        color: white;
        padding: 3rem 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .hero-section h1 {
        font-size: 2.5rem;
        margin: 0 0 1rem;
    }

    .hero-section .brand-name {
        color: #FFD700;
    }

    .hero-section p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .btn {
        display: inline-block;
        background-color: #FFD700;
        color: #333;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #FFC107;
    }

    .features-section {
        margin-top: 2rem;
    }

    .features-section h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        background: white;
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .feature-card p {
        font-size: 1rem;
        color: #555;
    }
</style>
