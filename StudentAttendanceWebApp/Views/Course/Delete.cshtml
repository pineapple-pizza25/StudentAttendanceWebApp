@model StudentAttendanceWebApp.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Course</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Courses</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Confirm Delete
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                Are you sure you want to delete this course? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CourseName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CourseName)</dd>

               

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Deprecated)</dt>
                <dd class="col-sm-9">
                    @if (Model.Deprecated)
                    {
                        <span class="badge bg-danger">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-success">No</span>
                    }
                </dd>
            </dl>

            @if (Model.Subjects.Any())
            {
                <div class="alert alert-danger">
                    <strong>Warning:</strong> This course has @Model.Subjects.Count associated subject(s). Deleting this course will affect these subjects.
                </div>
            }

            <form asp-action="Delete">
                <input type="hidden" asp-for="CourseId" />
                <div class="btn-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>