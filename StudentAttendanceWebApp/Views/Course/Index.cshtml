@model IEnumerable<StudentAttendanceWebApp.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Courses</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active">Courses</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Course List
            <a asp-action="Create" class="btn btn-primary float-end">Create New Course</a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info" role="alert">
                    No courses available. Click 'Create New Course' to add one.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover" id="coursesTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CourseName)</th>
                            <th>@Html.DisplayNameFor(model => model.Duration)</th>
                            <th>@Html.DisplayNameFor(model => model.Deprecated)</th>
                            <th>Subjects Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Duration) months</td>
                                <td>
                                    @if (item.Deprecated)
                                    {
                                        <span class="badge bg-danger">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">No</span>
                                    }
                                </td>
                                <td>@item.Subjects.Count</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#coursesTable').DataTable({
                "responsive": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "language": {
                    "search": "Search courses:",
                    "zeroRecords": "No matching courses found"
                }
            });
        });
    </script>
}
