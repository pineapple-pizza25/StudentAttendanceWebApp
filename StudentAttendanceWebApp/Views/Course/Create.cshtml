@model StudentAttendanceWebApp.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Course</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Courses</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-1"></i>
            New Course Details
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label"></label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Duration" class="form-label"></label>
                    <input asp-for="Duration" class="form-control" type="number" min="1" max="48" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                    <small class="form-text text-muted">Duration in months (1-48)</small>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Deprecated" class="form-check-input" />
                    <label asp-for="Deprecated" class="form-check-label"></label>
                    <span asp-validation-for="Deprecated" class="text-danger"></span>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}