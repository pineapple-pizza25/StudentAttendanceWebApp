@model StudentAttendanceWebApp.Models.Lecturer

@{
    ViewData["Title"] = "Lecturer Details";
}

<h1>Lecturer Details</h1>

<div>
    <h4>Lecturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Lecturer ID</dt>
        <dd class="col-sm-10">@Model.LecturerId</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth</dd>

        <dt class="col-sm-2">Campus ID</dt>
        <dd class="col-sm-10">@Model.CampusId</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.LecturerId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
