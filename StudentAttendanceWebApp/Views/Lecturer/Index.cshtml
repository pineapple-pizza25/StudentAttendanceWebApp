@model IEnumerable<StudentAttendanceWebApp.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}

<h1>Lecturers</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.LecturerId</td>
                <td>@lecturer.FirstName</td>
                <td>@lecturer.LastName</td>
                <td>@lecturer.PhoneNumber</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.DateOfBirth</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@lecturer.LecturerId">Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@lecturer.LecturerId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@lecturer.LecturerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create">Add New Lecturer</a>
