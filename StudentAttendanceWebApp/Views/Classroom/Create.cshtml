// Views/Classroom/Create.cshtml
@model StudentAttendanceWebApp.Models.Classroom

@{
    ViewData["Title"] = "Create Classroom";
}

<div class="container px-4 py-5">
    <h2>Create Classroom</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="RoomNumber" class="control-label"></label>
                    <input asp-for="RoomNumber" class="form-control" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CampusId" class="control-label"></label>
                    <input asp-for="CampusId" class="form-control" />
                    <span asp-validation-for="CampusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}