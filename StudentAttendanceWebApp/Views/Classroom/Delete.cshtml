@model StudentAttendanceWebApp.Models.Classroom

@{
    ViewData["Title"] = "Delete Classroom";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="card-title mb-0">Delete Classroom</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                Are you sure you want to delete this classroom? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Campus)</dt>
                <dd class="col-sm-9">@(Model.Campus?.Name ?? "Unknown Campus")</dd>
            </dl>

            @if (Model.Lessons != null && Model.Lessons.Any())
            {
                <div class="alert alert-danger">
                    <strong>Warning:</strong> This classroom has @Model.Lessons.Count associated lesson(s).
                    Deleting this classroom will affect these lessons.
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="btn-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>