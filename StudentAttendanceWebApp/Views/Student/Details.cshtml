@model StudentAttendanceWebApp.Models.Student

<div class="container">
    <header class="header">
        <h1>Student Details</h1>
    </header>

    <div class="content-wrapper">
        <div class="student-info">
            <div class="detail-item">
                <strong>First Name:</strong>
                <p>@Model.FirstName</p>
            </div>

            <div class="detail-item">
                <strong>Last Name:</strong>
                <p>@Model.LastName</p>
            </div>

            <div class="detail-item">
                <strong>Phone Number:</strong>
                <p>@Model.PhoneNumber</p>
            </div>

            <div class="detail-item">
                <strong>Email:</strong>
                <p>@Model.Email</p>
            </div>

            <div class="detail-item">
                <strong>Date of Birth:</strong>
                <p>@Model.DateOfBirth</p>
            </div>

            <div class="detail-item">
                <strong>Registration:</strong>
                <p>@Model.RegistrationComplete</p>
            </div>
        </div>

        <div class="form-actions">
            <form asp-action="CompleteRegistration" method="post">
                <input type="hidden" name="studentId" value="@Model.StudentId" />
                <button type="submit" class="btn btn-primary">Complete Registration</button>
            </form>

            <form asp-action="Attendance" method="get">
                <input type="hidden" name="studentId" value="@Model.StudentId" />
                <button type="submit" class="btn btn-primary">View Attendance</button>
            </form>

            <a href="/Students/Edit/@Model.StudentId" class="btn edit-button">Edit</a>
            <a href="/Students" class="btn back-button">Back to List</a>
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        min-height: 100vh; /* Change to min-height for better responsiveness */
        background-color: #f1f1f1; /* Light background for better contrast */
    }

    .container {
        display: flex;
        flex-direction: column; /* Stack elements vertically */
        width: 100%;
    }

    .header {
        background-color: #4CAF50;
        color: white;
        padding: 20px;
        text-align: center;
    }

    .content-wrapper {
        display: flex; /* Allow side-by-side content */
        flex: 1; /* Take up remaining space after header */
        padding: 20px;
    }

    .student-info {
        flex: 1; /* Take up available space */
        margin-right: 20px; /* Spacing between info and buttons */
        background-color: #fff; /* White background for better readability */
        padding: 20px;
        border-radius: 5px; /* Gentle rounded corners */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    .detail-item {
        margin-bottom: 15px;
    }

        .detail-item strong {
            display: block; /* Force strong element to new line */
            margin-bottom: 5px;
        }

    .form-actions {
        flex: 0 0 auto; /* Don't grow or shrink, take remaining space */
    }

    .btn {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #45a049;
        }
</style>