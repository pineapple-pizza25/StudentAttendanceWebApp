@model StudentAttendanceWebApp.Models.Student

<div class="container">
    <div class="sidebar">
        <h2>INNOV8</h2>
        <div class="sidebar-item"><a href="/StudentInformationPage">My Classes</a></div>
        <div class="sidebar-item"><a href="/Students">Students</a></div>
        <div class="sidebar-item"><a href="/Settings">Settings</a></div>
        <div class="sidebar-item back-to-home">
            <button onclick="location.href='/'" class="button">Back to Home</button>
        </div>
    </div>

    <div class="main-content">
        <div class="header">
            <h1>Student Details</h1>
        </div>

        <div class="details-container">
            <div class="detail-item">
                <strong>First Name:</strong>
                <p>@Model.FirstName</p>
            </div>

            <div class="detail-item">
                <strong>Last Name:</strong>
                <p>@Model.LastName</p>
            </div>

            <div class="detail-item">
                <strong>Phone Number:</strong>
                <p>@Model.PhoneNumber</p>
            </div>

            <div class="detail-item">
                <strong>Email:</strong>
                <p>@Model.Email</p>
            </div>

            <div class="detail-item">
                <strong>Date of Birth:</strong>
                <p>@Model.DateOfBirth</p>
            </div>

            <div class="detail-item">
                <strong>Registration:</strong>
                <p>@Model.RegistrationComplete</p>
            </div>
        </div>

        <div class="form-actions">

            <form asp-action="CompleteRegistration" method="post">
                <input type="hidden" name="studentId" value=@Model.StudentId />
                <button type="submit" class="btn btn-primary">Complete Registration</button>
            </form>

            <button type="button" class="button edit-button" onclick="location.href='/Students/Edit/@Model.StudentId'">Edit</button>
            <button type="button" class="button back-button" onclick="location.href='/Students'">Back to List</button>
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .container {
        display: flex;
        width: 100%;
    }

    .sidebar {
        width: 220px;
        background-color: #f1f1f1;
        padding: 20px;
        box-sizing: border-box;
        position: fixed;
        height: 100%;
        left: 0;
        display: flex;
        flex-direction: column;
    }

    .sidebar h2 {
        margin-top: 0;
    }

    .sidebar-item {
        padding: 10px;
        margin-bottom: 10px;
    }

    .sidebar-item a {
        text-decoration: none;
        color: black;
    }

    .sidebar-item:hover {
        background-color: #ddd;
    }

    .back-to-home {
        margin-top: auto;
        margin-top: 20px;
    }

    .button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: background-color 0.3s ease;
        width: 100%;
    }

    .button:hover {
        background-color: #45a049;
    }

    .main-content {
        margin-left: 220px;
        padding: 20px;
        width: calc(100% - 220px);
        box-sizing: border-box;
    }

    .header {
        background-color: #4CAF50;
        color: white;
        padding: 20px;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
    }

    .student-info {
        margin-top: 20px;
    }

    .student-info p, .student-info ul {
        margin: 10px 0;
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 40px;
    }
</style>
